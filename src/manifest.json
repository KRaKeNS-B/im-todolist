{
  "manifest_version": 2,
  "name": "im-todolist",
  "version": "1.0",
  "description": "Involta Messenger todolist",
  "content_scripts": [
    {
      "matches": [
        "*://localhost/*",
        "*://web.involta.work/*",
        "*://m-bobovikov.web-app.involta-messenger.dev-02.h.involta.ru/*"
      ],
      "js": [ "js/content-script.js" ]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "unlimitedStorage",
    "storage"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
